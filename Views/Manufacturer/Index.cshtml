@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Lab4.MedicineDB;
@model List<Manufacturer>

<head>
    <title>Производители</title>
    <meta charset="utf-8" />
</head>

<h2>Список производителей</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Страна</th>
            <th>Контактная информация</th>
            <th>Препараты</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var manufacturer in Model)
        {
            <tr>
                <td>@manufacturer.ID</td>
                <td>@manufacturer.Name</td>
                <td>@manufacturer.Country</td>
                <td>@manufacturer.Contact_information</td>
                <td>
                    @foreach(var medicine in manufacturer.Medicines)
                    {
                        <div>@medicine.Name</div>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@manufacturer.ID">Редактировать</a>
                    <form asp-controller="Manufacturer" asp-action="Delete" method="post" asp-route-id="@manufacturer.ID">
                        <input type="submit" value="Удалить" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div><a asp-action="Create">Новый производитель</a></div>
<div>@Html.ActionLink("В меню", "Index", "Home")</div>