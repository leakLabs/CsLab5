@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Lab4.MedicineDB;
@model Manufacturer

<head>
    <title>Добавить производителя</title>
    <meta charset="utf-8" />
</head>

<h2>Добавить производителя</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Name">Имя</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div>
        <label asp-for="Country">Страна</label>
        <input asp-for="Country" />
    </div>

    <div>
        <label asp-for="Contact_information">Контактная информация</label>
        <input asp-for="Contact_information" />
    </div>

    <button type="submit">Добавить</button>
</form>

<a asp-action="Index">Назад</a>

