@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Lab4.MedicineDB;
@model Manufacturer

<head>
    <title>Ред. производителя</title>
    <meta charset="utf-8" />
</head>

<h2>Редактировать производителя</h2>

<form asp-action="Edit" asp-controller="Manufacturer" asp-route-id="@Model.ID">

    <div>
        <label asp-for="Name">Имя</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div>
        <label asp-for="Country">Страна</label>
        <input asp-for="Country" />
    </div>

    <div>
        <label asp-for="Contact_information">Контактная информация</label>
        <input asp-for="Contact_information" />
    </div>

    <button type="submit">Сохранить</button>

<a asp-action="Index">Назад</a>

</form>