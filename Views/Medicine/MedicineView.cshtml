@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Lab4.MedicineDB;
@using lab5.Models;
@model createViewModel

<head>
    <title>Ред. препарат</title>
    <meta charset="utf-8" />
</head>

<h2>Просмотр препарата</h2>


<div>
    <b>Название</b>: @Model.medicine.Name
</div>
<br>
<div>
    <b>Форма</b>: @Model.medicine.Form
</div>
<br>
<div>
    <b>Дозировка</b>: @Model.medicine.Dosage
</div>
<br>
<div>
    <b>Производитель</b>: @Model.medicine.Manufacturers.Name
</div>
<br>
<div>
    <b>Состав</b>:
</div>

<div>
    @foreach (Ingredient ingr in Model.medicine.Ingredients)
    {
        <div>@ingr.Name</div>
    }
</div>
<br>
<div>
    <b>Описание</b>:
    @Model.medicine.Description
</div>
<br>
<div>
    <a asp-action="Edit" asp-controller="Medicine" asp-route-id="@Model.medicine.ID">Изменить</a>
</div>
<br>
<form asp-controller="Medicine" asp-action="Delete" method="post" asp-route-id="@Model.medicine.ID">
    <input type="submit" value="Удалить" />
</form>

<div><a asp-action="Redirect">Назад</a></div>